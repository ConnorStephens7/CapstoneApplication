<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:rsb_indicator_text_color="http://schemas.android.com/apk/res-auto">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="251dp" />

    <ImageView
        android:id="@+id/pause_icon"
        android:layout_width="40dp"
        android:layout_height="41dp"

        android:layout_alignStart="@+id/videoView"
        android:layout_alignLeft="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="186dp"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="185dp"
        android:layout_marginRight="185dp"
        android:layout_marginBottom="616dp"
        android:src="@drawable/icon_pause" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/leftClock"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="00:00:00"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/rightClock"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="287dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="27dp"
            android:layout_toEndOf="@+id/leftClock"
            android:text="00:00:00"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>

    <com.aghajari.axvideotimelineview.AXVideoTimelineView
        android:id="@+id/axView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="60dp"
        app:color="@android:color/white"
        app:iconColor="@android:color/holo_blue_dark"
        app:playLine="true"
        app:timelineColor="@android:color/holo_blue_dark" />
</RelativeLayout>